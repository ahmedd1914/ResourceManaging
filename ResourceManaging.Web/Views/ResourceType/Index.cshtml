@model ResourceTypeListViewModel

@{
    ViewData["Title"] = "Resource Types";
}

<h2>Resource Types</h2>
<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Create Resource Type
    </a>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var type in Model.ResourceTypes)
    {
        <tr>
            <td>@type.Name</td>
            <td>@type.Description</td>
            <td>
                <a asp-action="Details" asp-route-id="@type.ResourceTypeId" class="btn btn-info btn-sm">Details</a>
                <a asp-action="Edit" asp-route-id="@type.ResourceTypeId" class="btn btn-primary btn-sm">Edit</a>
            </td>
        </tr>
    }
    </tbody>
</table>

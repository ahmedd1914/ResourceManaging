@model EditResourceViewModel

@{
    ViewData["Title"] = "Edit Resource";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="bi bi-pencil-square"></i> Edit Resource
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="ResourceId" />
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">
                                <i class="bi bi-tag"></i> Name
                            </label>
                            <input asp-for="Name" class="form-control" placeholder="Enter resource name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ResourceTypeId" class="form-label">
                                <i class="bi bi-grid-3x3"></i> Resource Type
                            </label>
                            <select asp-for="ResourceTypeId" class="form-select" 
                                    asp-items="@(new SelectList(Model.ResourceTypes, "ResourceTypeId", "Name"))">
                                <option value="">-- Select Resource Type --</option>
                            </select>
                            <span asp-validation-for="ResourceTypeId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Capacity" class="form-label">
                                <i class="bi bi-people"></i> Capacity
                            </label>
                            <input asp-for="Capacity" class="form-control" type="number" min="1" 
                                   placeholder="Enter resource capacity" />
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="IsActive" class="form-check-input" type="checkbox" role="switch" />
                                <label asp-for="IsActive" class="form-check-label">
                                    <i class="bi bi-toggle-on"></i> Active Status
                                </label>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

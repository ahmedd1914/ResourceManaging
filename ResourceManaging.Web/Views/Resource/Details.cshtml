@model ResourceManaging.Web.Models.ViewModels.Resource.ResourceDetailsViewModel

@{
    ViewData["Title"] = "Resource Details";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="card-title mb-0">
                            <i class="bi bi-box-seam"></i> Resource Details
                        </h3>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@Model.ResourceId" class="btn btn-light btn-sm">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Index" class="btn btn-light btn-sm">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-3 text-center">
                            <div class="resource-icon-lg bg-primary text-white mx-auto mb-3">
                                <i class="bi bi-box-seam"></i>
                            </div>
                            <h4 class="mb-0">@Model.Name</h4>
                            <small class="text-muted">@Model.ResourceType?.Name</small>
                        </div>
                        <div class="col-md-9">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label text-muted">
                                            <i class="bi bi-people"></i> Capacity
                                        </label>
                                        <p class="mb-0">@Model.Capacity</p>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label text-muted">
                                            <i class="bi bi-toggle-on"></i> Status
                                        </label>
                                        <p class="mb-0">
                                            <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
                                                <i class="bi @(Model.IsActive ? "bi-check-circle" : "bi-x-circle")"></i>
                                                @(Model.IsActive ? "Active" : "Inactive")
                                            </span>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end">
                        <a asp-controller="Reservation" asp-action="Create" asp-route-resourceId="@Model.ResourceId" 
                           class="btn btn-success">
                            <i class="bi bi-calendar-plus"></i> Make Reservation
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .resource-icon-lg {
        width: 100px;
        height: 100px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
    }
</style>
